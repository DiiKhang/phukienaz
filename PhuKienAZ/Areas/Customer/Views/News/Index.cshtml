@using PagedList.Mvc;
@model PagedList.IPagedList<PhuKienAZ.Areas.Admin.Models.DataModel.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

<hr />
<h3 style="text-align:center">Trang tin tức</h3>
<hr />

<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            
            @foreach (var item in Model)
            {
                <div class="col-md-12 col-xs-12">
                    <a href="/Customer/News/Details/@item.Id">
                        <div class="section-title">
                            <div class="col-md-4"><center><img style="height:155px" width="250" src="@item.Picture" /></center></div>
                            <div class="col-md-8">
                                <div id="slick-nav-4" class="news-title">
                                    <h3>@item.Title</h3>
                                </div>
                                <div>
                                    Ngày tạo: @item.Date.Value.ToString("dd-MM-yyyy")
                                </div>
                                <br />
                                <i>@item.Brief</i>
                            </div>
                        </div>
                    </a>
                </div>
                <hr />
            }
            <!-- /row -->
        </div>
        <hr />
        <center>
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) của @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </center>
        <!-- /container -->
    </div>
</div>



