@model IEnumerable<PhuKienAZ.Areas.Admin.Models.DataModel.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h3>Sản phẩm</h3>

<p>
    @Html.ActionLink("Tạo mới", "Create", null, new { Class = "image-link add-image-link" })
</p>
<table class="table table-bordered hover" id="product-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SellOff)
            </th>
            <th>
                <center>Sửa | Chi tiết | Xóa</center>
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td style="white-space: nowrap;overflow: hidden;">
                    <a target="_blank" style="text-decoration: underline" href="/Customer/Product/Index/@item.Id">@item.Name</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SellOff)
                </td>         
                <td>
                    <center>
                        @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { Class = "image-link edit-image-link" }) &nbsp; &nbsp;
                        @Html.ActionLink(" ", "Details", new { id = item.Id }, new { Class = "image-link detail-image-link" }) &nbsp; &nbsp;
                        @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { Class = "image-link delete-image-link", onclick = "return confirm('Bạn chắc chắn chứ ?')" })
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.2.1/js/buttons.print.min.js"></script>
<script src="~/Areas/Admin/Content/build/js/my_data_tables.js"></script>
}
