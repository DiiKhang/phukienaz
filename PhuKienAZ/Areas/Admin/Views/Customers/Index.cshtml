@model IEnumerable<PhuKienAZ.Areas.Admin.Models.DataModel.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3>Thông tin khách hàng</h3>

<p>
    @Html.ActionLink("Tạo mới", "Create", null, new { Class = "image-link add-image-link" })
</p>
<table class="table table-bordered hover" id="customer-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankAccountCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>           
            <th>
                Giới tính
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                <center> Chi tiết </center>
            </th>
            <th>
                <center> Thao tác </center>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BankAccountCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                
                <td>
                    @if (item.Male)
                    {
                        <span>Nam</span>
                    }
                    else
                    {
                        <span>Nữ</span>
                    }
                </td>
                <td>
                   @if (item.Disabled)
                   {
                       <span>Đã vô hiệu hóa</span>
                   }else
                   {
                       <span>Đang hoạt động</span>
                   }
                </td>
                <td>
                    <center>
                        @Html.ActionLink(" ", "Details", new { id = item.Id }, new { Class = "image-link detail-image-link" }) &nbsp; &nbsp;
                    </center>
                </td>
                <td>
                    @if (item.Disabled)
                    {
                        <center>
                            @Html.ActionLink("Kích hoạt", "Enable", new { id = item.Id }, new { onclick = "return confirm('Bạn chắc chắn chứ ?')" }) &nbsp; &nbsp;
                        </center>
                    }
                    else
                    {
                        <center>
                            @Html.ActionLink("Vô hiệu hóa", "Disable", new { id = item.Id }, new { onclick = "return confirm('Bạn chắc chắn chứ ?')" }) &nbsp; &nbsp;
                        </center>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.2.1/js/buttons.print.min.js"></script>
    <script src="~/Areas/Admin/Content/build/js/my_data_tables.js"></script>
}